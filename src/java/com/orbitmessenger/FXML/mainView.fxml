<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainVBox" alignment="CENTER" prefHeight="500.0" prefWidth="1000.0" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#switchToLogin" text="Log Off" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#openPreferences" text="Preferencesâ€¦" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#openCreateRoom" text="Create Room" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#closeProgram" text="Quit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#copy" text="Copy" />
                        <MenuItem mnemonicParsing="false" onAction="#paste" text="Paste" />
                        <MenuItem mnemonicParsing="false" onAction="#selectMessageToDelete" text="Delete" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#popupAboutDialog" text="About Orbit Messenger" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <Label fx:id="roomLabel" text="General" BorderPane.alignment="CENTER" />
         </top>
         <left>
                <TitledPane fx:id="userPane" collapsible="false" contentDisplay="CENTER" prefHeight="407.0" prefWidth="150.0" text="Users" BorderPane.alignment="CENTER">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="150.0">
                            <children>
                                <ListView fx:id="userListView" layoutX="1.0" prefHeight="380.0" prefWidth="150.0" styleClass="messageSendTextArea" />
                            </children>
                        </AnchorPane>
                    </content>
                </TitledPane>
         </left>
         <right>
            <TitledPane fx:id="roomPane" alignment="TOP_LEFT" collapsible="false" contentDisplay="CENTER" prefHeight="407.0" prefWidth="150.0" text="Rooms" BorderPane.alignment="CENTER">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="150.0">
                     <children>
                        <ListView fx:id="roomListView" layoutX="-1.0" prefHeight="380.0" prefWidth="150.0" styleClass="messageSendTextArea" />
                     </children>
                  </AnchorPane>
               </content>
            </TitledPane>
         </right>
         <center>
            <ScrollPane fx:id="messagesScrollPane" fitToHeight="true" fitToWidth="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="407.0" prefWidth="706.0" vvalue="1.0" BorderPane.alignment="CENTER">
               <content>
                  <ListView fx:id="messagesListView" prefHeight="296.0" prefWidth="487.0" />
               </content>
            </ScrollPane>
         </center>
         <bottom>
            <HBox prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                      <TextArea fx:id="messageTextArea" onKeyPressed="#handleEnterPressed" prefHeight="50.0" prefWidth="855.0" promptText="Type your Message here..." wrapText="true" />
                      <Button fx:id="btnSend" defaultButton="true" mnemonicParsing="false" onAction="#sendMessage" onKeyPressed="#sendMessage" prefHeight="50.0" prefWidth="151.0" text="Send" />
               </children>
            </HBox>
         </bottom>
      </BorderPane>
    </children>
    <stylesheets>
        <URL value="@../css/ui.css" />
    </stylesheets>
</VBox>
